/* pages/detail/childCpns/b-base-info/b-base-info.wxss */
.base_info {
  padding: 16rpx;
  margin-top: 10rpx;
  border-bottom: 12rpx solid #f2f2f2;
}

.title {
  font-size: 32rpx;
}

.price_info {
  margin-top: 10rpx;
}

.new_price{
  color: #ff5777;
  margin-left: 10rpx;
}

.old_price {
  margin-left: 20rpx;
  font-size: 28rpx;
  text-decoration: line-through;
}

.discount {
  background: #ff5777;
  margin-left: 16rpx;
  padding: 4rpx 6rpx;
  color: #fff;
  font-size: 24rpx;
  border-radius: 16rpx;
  position: relative;
  bottom: 12rpx;
}

.sell_info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-top: 30rpx;
  padding-bottom: 16rpx;
  border-bottom: 1px solid rgba(200, 200, 200, .6);
}

.sell_item {
  text-align: center;
}

.service {
  display: flex;
  justify-content: space-between;
  /* flex-wrap: wrap; */
  font-size: 24rpx;
  padding: 30rpx 0;
}

.service_item {
  text-align: center;
}

.service_item .icon {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}

.service_item .name {
  vertical-align: middle;
}