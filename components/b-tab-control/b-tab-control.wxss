/* components/b-tab-control/b-tab-control.wxss */
.tab {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  padding-bottom: 10rpx;
  margin-bottom: 16rpx;
}

.tab_item {
  flex: 1;
  text-align: center;
}

.active {
  color: #ff5777;
}

.active text {
  padding: 20rpx 16rpx;
  border-bottom: 6rpx solid #ff5777;
}